<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student.view.StudentHomeActivity">

    <Button
        android:id="@+id/course_manager_btn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_button"
        android:text="我的课表"
        android:textSize="22sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/to_check_btn"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/to_check_btn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_button"
        android:text="签到"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <Button
        android:id="@+id/query_grade_btn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_button"
        android:text="成绩查询"
        android:textSize="22sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/to_check_btn"
        android:layout_marginTop="30dp"/>

</android.support.constraint.ConstraintLayout>